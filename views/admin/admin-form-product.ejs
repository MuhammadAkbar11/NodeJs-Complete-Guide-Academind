<%- include('../layouts/head.ejs') %> <%- include('../layouts/header.ejs') %>
<%- include('../layouts/sidebar-admin.ejs') %>

<main class="phoenix-main">
  <div class="container-fluid">
    <!-- Title page -->
    <div class="row">
      <h5 class="font-weight-bold">
        <% if (editing) { %>
        <i data-feather="edit" class="mt-n1 mr-1"></i>
        <span class="mt-1">Update product</span>
        <% } else { %>
        <i data-feather="plus" class="mt-n1 mr-1"></i>
        <span class="mt-1">Create new product</span>

        <% } %>
      </h5>
    </div>
    <div class="row px-0 mt-4">
      <div class="col-8 pl-0">
        <div class="card border-0 bg-transparent shadow-sm pt-4">
          <div class="card-body">
            <div class="row">
              <div class="col-md-12">
                <form
                  action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>"
                  method="POST"
                >
                  <div class="row mb-3">
                    <div class="col-md-6">
                      <% if (editing) { %>
                      <input
                        type="hidden"
                        value="<%= product.id_product %>"
                        name="productId"
                      />
                      <% } %>
                      <div class="form-group row">
                        <label for="" class="col-form-label col-md-4"
                          >Title</label
                        >
                        <div class="col-md-8">
                          <input
                            type="text"
                            class="form-control form-control-lg bg-transparent"
                            name="title"
                            id="title"
                            value="<% if (editing) { %><%= product.title_product %><% } %>"
                          />
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group row">
                        <label for="" class="col-form-label col-md-3"
                          >Price</label
                        >
                        <div class="col-md-9">
                          <input
                            type="text"
                            class="form-control form-control-lg bg-transparent"
                            name="price"
                            id="price"
                            step="0.01"
                            value="<% if (editing) { %><%= product.price_product %><% } %>"
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 mb-3">
                      <div class="form-group row">
                        <label for="" class="col-form-label col-md-2"
                          >ImgUrl</label
                        >
                        <div class="col-md-10">
                          <input
                            type="text"
                            class="form-control form-control-lg bg-transparent"
                            name="imageUrl"
                            id="imageUrl"
                            value="<% if (editing) { %><%= product.imgUrl_product %><% } %>"
                          />
                        </div>
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="form-group row">
                        <label for="" class="col-form-label col-md-2"
                          >Description</label
                        >
                        <div class="col-md-10">
                          <textarea
                            name="description"
                            id="description"
                            class="form-control form-control-lg bg-transparent"
                            cols="30"
                            rows="3"
                          >
<% if (editing) { %><%= product.desc_product %><% } %></textarea
                          >
                        </div>
                      </div>
                    </div>
                    <div class="col-md-12 mt-3 pb-3">
                      <div class="row px-2">
                        <div class="col-6 col-md-8"></div>
                        <div class="col-6 col-md-4 d-grid">
                          <button
                            class="btn btn-primary text-light"
                            type="submit"
                          >
                            <% if (editing) { %>Update Product<% } else { %>Add
                            Product<% } %>
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../layouts/footer.ejs') %> <%- include('../layouts/end.ejs') %>

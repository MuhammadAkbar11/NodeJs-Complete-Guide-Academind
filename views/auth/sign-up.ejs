<%- include('../layouts/auth-head.ejs') %>

<div class="position-relative w-100 h-100  bg-light">
  <div class="container-fluid w-100 h-100">
    <div class="row mx-auto my-auto h-100">
      <div class="col-lg-5 col-md-7 col-sm-8 mx-auto my-auto">
        <div class="card w-100 card-body text-dark-gray px-5 py-5  border-0">
          <div class="mb-3 text-center">
            <p class="my-0">Welcome to</p>
            <p class="fs-3">Phoe<span class="text-primary">nix.Com</span></p>
          </div>

          <% if(flashdata.length > 0) { %>
          <% flashdata.forEach(flash => { %>
          <div class="alert  alert-<%= flash.type === "error" ? "danger" : flash.type %> alert-dismissible fade show"
            role="alert">
            <%= flash.message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <% }) %>
          <%  } %>

          <form action="/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="mb-2">
              <label for="name" class="form-label fs-6 text-dark">Name</label>
              <input type="name" name="name" class="form-control rounded-0 " id="name" />
            </div>
            <div class="mb-2">
              <label for="email" class="form-label fs-6 text-dark">E-mail</label>
              <input type="email" name="email" class="form-control rounded-0 " id="email" />
            </div>
            <div class="row">
              <div class="mb-2 col ">
                <label for="password" class="form-label fs-6 text-dark">Password</label>
                <input type="password" name="password" class="form-control rounded-0 " id="password" />
              </div>
              <div class="mb-2 col ">
                <label for="password2" class="form-label fs-6 text-dark">Password Confirmation</label>
                <input type="password" name="password2" class="form-control rounded-0 " id="password2" />
              </div>
            </div>

            <div class="d-flex mt-4">
              <button class="btn btn-primary text-light flex-grow-1 py-2 fs-5">
                Sign
              </button>
            </div>
            <div class="ps-0 mt-5">
              <ul class="ps-3">

                </li>
                <li>
                  Already have an account?<a href="/login" class="text-decoration-none text-primary">
                    Login now</a>
                </li>
              </ul>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../layouts/auth-end.ejs') %>
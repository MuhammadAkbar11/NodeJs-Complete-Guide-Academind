<div
  class="toast toast-flash bg-<%= flashdata.type %>"
  role="alert"
  aria-live="assertive"
  aria-atomic="true"
  style="opacity: 1"
>
  <!-- toast header -->
  <div class="toast-header bg-<%= flashdata.type %> text-light">
    <i data-feather="check-circle"></i>
    <strong class="me-auto ms-2">Success!</strong>
    <small class="">now</small>

    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="toast"
      aria-label="Close"
    ></button>
  </div>
  <div class="toast-body text-light"><%= flashdata.message %></div>
</div>

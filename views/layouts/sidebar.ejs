<aside class="phoenix-sidebar">
  <div class="phx-sidebar-top">
    <div class="phx-logo">
      <p class="phx-logo-text">Phoe<span class="text-primary">nix.Com</span></p>
    </div>
  </div>
  <div class="phx-sidebar-nav">
    <nav class="nav flex-column">
      <a class="nav-link <%= path === '/' ? 'active': '' %>" href="/">
        <i data-feather="home" class="me-2 mt-n1"></i>
        Home
      </a>
      <a
        class="nav-link <%= path === '/products' ? 'active': '' %>"
        href="/products"
      >
        <i data-feather="list" class="me-2 mt-n1"></i>
        Products
      </a>
      <% if(isAuthenticated) { %>
      <a class="nav-link <%= path === '/cart' ? 'active': '' %>" href="/cart">
        <i data-feather="shopping-cart" class="me-2 mt-n1"></i>
        Cart
      </a>
      <a
        class="nav-link <%= path === '/orders' ? 'active': '' %>"
        href="/orders"
      >
        <i data-feather="send" class="me-2 mt-n1"></i>
        Orders
      </a>
      <form action="/logout" id="form-logout" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <a class="nav-link btn-logout" href="/logout">
          <i data-feather="log-out" class="me-2 mt-n1"></i>
          Logout
        </a>
      </form>
      <% } else { %>

      <a class="nav-link<%= path === '/login' ? 'active': '' %>" href="/login">
        <i data-feather="log-in" class="me-2 mt-n1"></i>
        Login
      </a>
      <% } %>
    </nav>
  </div>
  <div class="phx-sidebar-bottom">
    <a class="mx-auto mt-auto mb-3 phx-toggle phx-sidebar-close">
      <i data-feather="x"></i>
    </a>
  </div>
</aside>

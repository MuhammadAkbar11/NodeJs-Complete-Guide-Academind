<%- include('../layouts/head.ejs') %> <%- include('../layouts/header.ejs') %>
<%- include('../layouts/sidebar.ejs') %>

<main class="phoenix-main phoenix-main-100vh">
  <div class="container-fluid phx-h-100">
    <!-- Title page -->
    <nav class="mb-5" style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/products" class="text-primary">Products</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
          <span class="text-capitalize"> <%= product.title %></span>
        </li>
      </ol>
    </nav>

    <div class="row mt-4 phx-h-100">
      <div class="col-sm-12 px-2 phx-h-100">
        <div class="card mb-3 phx-h-100 phx-card-detail">
          <div class="row no-gutters">
            <div class="col-md-4 d-flex align-items-center">
              <img src="<%= product.imageUrl %>" class="card-img my-auto" alt="..." />
            </div>
            <div class="col-md-7 offset-md-1">
              <div class="card-body d-flex flex-column phx-h-100">
                <h4 class="text-uppercase"><%= product.title %></h4>

                <h2 class="text-primary my-2 my-md-4">
                  <%= product.price.rupiah %>
                </h2>

                <p class="card-text text-dark">
                  This is a wider card with supporting text below as a natural
                  lead-in to additional content. This content is a little bit
                  longer.
                </p>

                <div>
                  <% if (isAuthenticated) { %>
                  <form action="/cart" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <button class="btn btn-primary text-white-500 mt-2 mt-md-4 mb-5 px-4" type="submit">
                      Add to Cart
                    </button>
                    <input type="hidden" name="productId" value="<%= product._id %>" />
                  </form>
                  <% } %>
                </div>

                <div class="mt-auto">
                  <a href="/products" class="mt-auto text-primary text-primary-700-hover">
                    <small class="text-current"><i height="18" data-feather="arrow-left"></i>
                    </small>
                    Back to products page
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../layouts/footer.ejs') %> <%- include('../layouts/end.ejs') %>